     (heading "Errors")
     (para (code "GL_INVALID_ENUM")
           " is generated if "
           (var "mode")
           " is set to an unaccepted value. ")
     (para (code "GL_INVALID_OPERATION")
           " is generated if "
           (code "glBegin")
           " is executed between a "
           (code "glBegin")
