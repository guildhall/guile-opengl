       (var "type")
       " );
for ( i = "
       (var "i1")
       "; i <= "
       (var "i2")
       "; i += 1 )
   glEvalCoord1( "
       (math "i"
             ""
             ""
             (var "u")
             "+"
             (var "u")
             "_"
             "1")
       " );
glEnd(); ")
     (para (math ""
                 (var "u")
                 "="
                 "("
                 (var "u")
                 "_"
                 "2"
                 "-"
                 (var "u")
                 "_"
                 "1"
                 ","
                 ")"
                 "/"
                 (var "n")))
     (para "
